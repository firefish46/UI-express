// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model UIComponent {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  author    String
  category  String
  html      String
  css       String
  likes     Int      @default(0)
  createdAt DateTime @default(now())
}